{
  "name": "notion-replace-text",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.ts"
  },
  "action": {
    "default_title": "Notion Replace Text"
  },
  "content_scripts": [
    {
      "matches": ["https://www.notion.so/*", "https://notion.so/*"],
      "js": ["content-scripts/main.ts"]
    }
  ]
}
